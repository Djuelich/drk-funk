<p id="notice"><%= notice %></p>

<p>
  <strong>Ready:</strong>
  <%= @device.ready %>
</p>

<p>
  <strong>Info:</strong>
  <%= @device.info %>
</p>

<p>
  <strong>Owner Stock:</strong>
  <%= Stock.find_by_id(@device.owner_id).name %>
</p>

<p>
  <strong>Device type</strong>
  <% if !@device.device_type.nil? %> <%= @device.device_type.name%><% end %>
</p>

<p>
  <strong>Stock</strong>
  <%= @device.stock.name%>
</p>


<a href="/devices/"><button type="button" class = "btn btn-primary" >Back</button></a>
<%= link_to 'Edit', edit_device_path(@device), class:'btn btn-warning' %>

