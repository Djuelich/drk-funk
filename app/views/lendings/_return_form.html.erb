<%= form_for(@lending) do |f| %>

<div>
    <p>
      <strong>User:</strong>
      <%= @lending.user_id %>
    </p>

    <p>
      <strong>Lending:</strong>
      <%= @lending.created_at %>
    </p>

    <p>
      <strong>Lending info:</strong>
      <%= @lending.lending_info %>
    </p>

    <!-- TODO: Change to username instead of ID -->
    <p>
      <strong>Lender:</strong>
      <%= @lending.lender_id %>
    </p>
</div>

    <div class="field">
  <%= f.label :recieve_info %><br>
  <%= f.text_area :receive_info %>
</div>

    <%= f.hidden_field :receiver_id , :value => current_user.id %>
    <%= f.hidden_field :receive , :value => Time.now %>


    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>